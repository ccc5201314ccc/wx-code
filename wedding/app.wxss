/**app.wxss**/
@import "font/iconfont.wxss";
.container {
  padding: 20rpx;
} 
swiper{
  height: 360rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.col-xs1{
  width: 5%;
  padding-right: 10rpx;
  display: inline-block;
}
.col-x2{
  width: 20%;
  display: inline-block;
}
.col-x8{
  width: 80%;
  display: inline-block;
}
.col-xs9{
  width: 80%;
  display: inline-block;
}
.contanier{
  padding: 10px;
}
.middle{
   vertical-align: middle;
}
.top{
  vertical-align: top;
}
.border-bottom{
  border-bottom: 2rpx solid #EEE;
}
.title{
  font-size: 30rpx;
  text-align: center;
}
.subtitle{
  text-align: center;
  font-size: 26rpx;
  color: #999;
  padding: 20rpx 0;
}
/*暂无数据显示样式  */
.server{
  width: 100%;
  text-align: center;
  position: relative;
  padding: 10rpx 0;
}
.server .server-text{
  color: #999;
  font-size: 28rpx;
}
/*调整背景横线的左右距离*/  
.server .server-text:before {
  left: 15%;
}
.server .server-text:after {
  right: 15%;
} 
.server .server-text:after,.server .server-text:before {
  background: #eee;
  content: "";
  height:2rpx;
  position: absolute;
  top: 50%;
  width: 20%;
}  
.loading{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin: 0 auto;
}
