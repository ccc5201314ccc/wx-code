/**index.wxss**/
.header{
  position: relative;
}
.slide-image{
  width: 100%;
  height: 640rpx;
}
.search{
  width: 100%;
  padding: 20rpx 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255,204,50,0.9);
}
.input{
  width: 90%;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 40rpx;
}
.x2,.x8{
  display: inline-block;
  height: 50rpx;
}
.x2{
  vertical-align: top;
}
.search_img{
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
  vertical-align: middle;
}
.search_input{
  display: inline-block;
  font-size: 26rpx;
  height: 50rpx;
  color: #999;
}
.group{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.section-item{
  width: 20%;
  display: inline-block;
  text-align: center;
}
.index_icon{
  width: 80rpx;
  height: 80rpx;
  margin:20rpx auto;
  border-radius: 50%;
}
.item_cion{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
}
.text{
  display: block;
  font-size: 24rpx;
}
.tel{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  line-height: 40rpx;
  background: #ffcc32;
  border-radius: 20rpx;
  color: #fff;
  font-size:24rpx; 
  padding: 4rpx 10rpx;
  display: flex;
  align-content: center;
}
.tel-icon{
  width: 30rpx;
  height: 30rpx;
  padding: 5rpx 0;
}
.new{
    display: block;
    text-align: center;
    padding: 20rpx 0;
    font-size: 28rpx;
    border-bottom: 2rpx solid #eee;
}
.list .item_x2{
  vertical-align: top;
}
.list .item_x2 .item_avtar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.banner{
  display: flex;
  flex-direction: row;
}
.item_banner{
  width: 140rpx;
  height: 140rpx;
  margin: 10rpx;
}
.title,.detail{
  display: block;
}
.title{
  font-size: 28rpx;
  font-weight: bold;
}
.info-views{
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-right:6rpx; 
}
.subtitle,.detail{
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
}
.watch{
  color: #ffcc32;
  font-size: 24rpx;
}
.info{
  width: 100%;
  font-size: 0;
}
.info .time,.info .views,.info .msg{
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
}
.info-x5,.info-x3,.info-x2{
  display: inline-block;
}
.info-x5{
  width: 50%;
}
.info-x3{
  text-align: right;
  width: 30%;
}
.info-x2{
  text-align: center;
  width: 20%;
}
.ellipsis{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}