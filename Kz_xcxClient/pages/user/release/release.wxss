/* pages/user/release/release.wxss */
.server{
  width: 100%;
  text-align: center;
  position: relative;
}
.nodata{
  width: 128rpx;
  margin: 40rpx auto 0;
}
.img{
  width: 100%;
  height: 128rpx;
}
.text{
  color: #999;
  font-size: 28rpx;
}
.server .text:after,.server .text:before {
  background: #eee;
  content: "";
  height:2rpx;
  position: absolute;
  top: 50%;
  width: 20%;
}  
/*调整背景横线的左右距离*/  
.server .text:before {
  left: 15%;
}
.server .text:after {
  right: 15%;
}  